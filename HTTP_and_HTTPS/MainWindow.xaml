<Window x:Class="ImageSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Search App" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="SearchTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
            <ComboBox Name="SearchEnginesComboBox" Width="150" Margin="0,10,0,0">
                <ComboBoxItem Content="Bing"/>
                <ComboBoxItem Content="Google"/>
            </ComboBox>
            <Button Content="Search Images" Click="SearchButton_Click" Width="120" Margin="0,10,0,0"/>
            <ListBox x:Name="ImageResultsListBox" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
