<Window x:Class="SearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search App" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="SearchTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
            <Button Content="Search Bing" Click="SearchButton_Click" Width="120"/>
            <TextBox Name="SearchResultsTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
